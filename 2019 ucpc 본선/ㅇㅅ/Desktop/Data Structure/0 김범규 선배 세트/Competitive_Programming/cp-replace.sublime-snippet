	<content><![CDATA[
void repl(string& src, string const& from, string const& to) {
    for(int i = 0; (i = src.find(from, i)) != string::npos;) {
        src.replace(i, from.length(), to);
        i += to.length();
    }
}
]]></content>
	<!-- Optional: Set a tabTrigger to define how to trigger the snippet -->
	<tabTrigger>cp-replace</tabTrigger>
	<!-- Optional: Set a scope to limit where the snippet will trigger -->
	<!-- <scope>source.python</scope> -->
